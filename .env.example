# InkDot 环境变量配置模板
# 复制此文件为 .env.local 并填入实际值

# ===========================================
# 应用配置
# ===========================================
VITE_APP_TITLE=InkDot
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=创意创作思维导图平台

# ===========================================
# API 配置
# ===========================================
# API基础URL
VITE_API_BASE_URL=http://localhost:3000

# DeepSeek API配置
VITE_DEEPSEEK_API_KEY=your_deepseek_api_key_here
VITE_DEEPSEEK_BASE_URL=https://api.deepseek.com

# OpenRouter API配置
VITE_OPENROUTER_API_KEY=your_openrouter_api_key_here
VITE_OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# ===========================================
# 开发环境配置
# ===========================================
NODE_ENV=development
VITE_DEV_SERVER_PORT=5173
VITE_DEV_SERVER_HOST=localhost

# 是否启用开发工具
VITE_ENABLE_DEVTOOLS=true

# ===========================================
# 功能开关
# ===========================================
# AI功能开关
VITE_ENABLE_AI_FEATURES=true
VITE_ENABLE_DEEPSEEK=true
VITE_ENABLE_OPENROUTER=true

# 调试模式
VITE_DEBUG_MODE=false
VITE_ENABLE_CONSOLE_LOGS=true

# ===========================================
# 第三方服务
# ===========================================
# 分析服务（可选）
VITE_ANALYTICS_ID=

# 错误监控（可选）
VITE_SENTRY_DSN=

# ===========================================
# 构建配置
# ===========================================
# 构建输出目录
VITE_BUILD_OUTPUT_DIR=dist

# 是否启用源码映射
VITE_SOURCEMAP=true

# ===========================================
# 安全配置
# ===========================================
# JWT密钥（生产环境必须更改）
VITE_JWT_SECRET=your_jwt_secret_here

# 加密密钥
VITE_ENCRYPTION_KEY=your_encryption_key_here

# ===========================================
# 存储配置
# ===========================================
# 本地存储前缀
VITE_STORAGE_PREFIX=inkdot_

# 缓存过期时间（秒）
VITE_CACHE_EXPIRE_TIME=3600

# ===========================================
# 主题配置
# ===========================================
# 默认主题
VITE_DEFAULT_THEME=light

# 支持的主题列表
VITE_SUPPORTED_THEMES=light,dark,auto

# ===========================================
# 国际化配置
# ===========================================
# 默认语言
VITE_DEFAULT_LOCALE=zh-CN

# 支持的语言列表
VITE_SUPPORTED_LOCALES=zh-CN,en-US

# ===========================================
# 性能配置
# ===========================================
# 是否启用懒加载
VITE_ENABLE_LAZY_LOADING=true

# 图片压缩质量
VITE_IMAGE_QUALITY=80

# 分页大小
VITE_PAGE_SIZE=20

# ===========================================
# 实验性功能
# ===========================================
# 是否启用实验性功能
VITE_ENABLE_EXPERIMENTAL=false

# 新功能开关
VITE_ENABLE_NEW_FEATURES=false

# ===========================================
# 生产环境配置（部署时设置）
# ===========================================
# 生产环境API地址
# VITE_API_BASE_URL=https://api.inkdot.com

# CDN地址
# VITE_CDN_URL=https://cdn.inkdot.com

# 域名配置
# VITE_DOMAIN=inkdot.com

# HTTPS配置
# VITE_FORCE_HTTPS=true

# ===========================================
# 说明
# ===========================================
# 1. 所有以 VITE_ 开头的变量会在构建时注入到前端代码中
# 2. 不要在 .env.local 文件中提交敏感信息到版本控制
# 3. 生产环境请使用环境变量或安全的配置管理系统
# 4. 修改配置后需要重启开发服务器
# 5. 更多配置选项请参考 Vite 官方文档
